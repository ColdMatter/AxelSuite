<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Axel_data"
             xmlns:ni="http://schemas.ni.com/controls/2009/xaml/presentation" x:Class="Axel_data.graphTestUC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <GroupBox x:Name="groupBox" Header="Control" Height="120" Margin="0,0,0.203,0" VerticalAlignment="Top" Width="80" BorderBrush="#FF024974">
            <Grid>
                <Button x:Name="btnTest" Content="Test" Margin="0,5,0.051,0" VerticalAlignment="Top" Height="29" Click="btnTest_Click"/>
                <RadioButton x:Name="rbMode1" Content="Whole" HorizontalAlignment="Left" Margin="8,50,0,0" VerticalAlignment="Top" IsChecked="True"/>
                <RadioButton x:Name="rbMode2" Content="Iter." HorizontalAlignment="Left" Margin="8,71,0,0" VerticalAlignment="Top"/>

            </Grid>
        </GroupBox>

        <ni:Graph x:Name="graph1" DataSource="{Binding}" Grid.Column="1" Margin="0" RenderMode="Raster"/>

    </Grid>
</UserControl>
