<Window x:Name="frmAxelHub" x:Class="Axel_hub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ni="http://schemas.ni.com/controls/2009/xaml/presentation"
        xmlns:vsc="clr-namespace:scanHub;assembly=scanHub" 
        xmlns:vss="clr-namespace:AxelChartNS;assembly=AxelChart" 
        Title="Axel Hub" Height="856.652" Width="1176.785" Icon="rocket1.ico" ResizeMode="CanResizeWithGrip">
    <Grid x:Name="gridMain" Margin="0,0,-0.143,0.429">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="265" Width="265"/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>
        <Grid x:Name="gridLeft" Margin="0,0,0,0" Background="#FFFBFAEF" Width="275">
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="100" Height="272"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="91*"/>
            </Grid.RowDefinitions>
            <!--  <vsc:scanClass x:Name="ucScan1" Grid.Row="0" Height="266" VerticalAlignment="Top" Width="Auto"/>-->
            <RichTextBox x:Name="tbLog" Grid.Row="2" Margin="0,0.286,10,0.429" VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" AcceptsReturn="True"/>
            <StackPanel HorizontalAlignment="Left" Height="30" Grid.Row="1" VerticalAlignment="Top" Width="265" Grid.RowSpan="1" Orientation="Horizontal" Background="#FFF9FEFF">
                <CheckBox x:Name="chkLog" Content="Log" HorizontalAlignment="Left" Margin="10,5,0,0" Grid.Row="1" VerticalAlignment="Center" IsChecked="True"/>
                <CheckBox x:Name="chkVerbatim" Content="Verbatim" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Center"/>
                <Button x:Name="btnLogClear" Content="Clear" HorizontalAlignment="Left" Margin="10,2,0,0" Grid.Row="1" VerticalAlignment="Center" Width="75" Click="btnLogClear_Click" Background="#FFE5EDFF"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="gridRight" Grid.Column="1" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="rowUpperChart" MinHeight="100" Height="120*"/>
                <RowDefinition x:Name="rowMiddleChart" MinHeight="30" Height="100*"/>
                <RowDefinition x:Name="rowLowerChart" MinHeight="100" Height="100*"/>
            </Grid.RowDefinitions>
            <GridSplitter HorizontalAlignment="Stretch" Height="4" Grid.Row="1" VerticalAlignment="Top" Margin="0,1.143,0,0" Background="#FFFFFEBD"/>
            <GridSplitter x:Name="splitDown" HorizontalAlignment="Stretch" Height="4" Grid.Row="2" VerticalAlignment="Top" Margin="0,1.143,0,0" Background="#FFDDFCD4" MouseDoubleClick="splitDown_MouseDoubleClick"/>

            <vss:AxelChartClass x:Name="AxelChart1" Grid.Row="0" Height="Auto" Width="Auto" Margin="0"/>

            <Grid x:Name="gridMiddle" Grid.Row="1" MinHeight="20">
                <TabControl x:Name="tabSecPlots" Margin="0,0,0.714,2.286" SelectedIndex="0" FontSize="14" SelectionChanged="tabSecPlots_SelectionChanged">
                    <TabItem Header=" Hide "/>
                    <TabItem x:Name="tabSignal" Header="Signal" Width="100" Height="28">
                        <Grid Margin="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="391*"/>
                                <ColumnDefinition Width="391*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" Margin="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="26"/>
                                    <RowDefinition Height="70*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <CheckBox x:Name="chkN1" Content="N1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" IsChecked="True" Checked="chkN1_Checked" Unchecked="chkN1_Checked"/>
                                    <CheckBox x:Name="chkN2" Content="N2" VerticalAlignment="Center" Margin="5,0,0,0" IsChecked="True" Unchecked="chkN1_Checked" Checked="chkN1_Checked"/>
                                    <CheckBox x:Name="chkNtot" Content="Ntot" VerticalAlignment="Center" Margin="5,0,0,0" IsChecked="True" Unchecked="chkN1_Checked" Checked="chkN1_Checked"/>
                                    <Label x:Name="lbInfo1" Content="Info:" Margin="8,0,0,0" VerticalAlignment="Center" Height="31" FontSize="13" HorizontalAlignment="Left" Width="173"/>
                                </StackPanel>
                                <ni:Graph x:Name="graphNs" Grid.Row="1" Margin="0,0,0,0" FontSize="12" PlotAreaMargin="Auto,Auto,Auto,Auto" >
                                    <ni:Graph.Plots>
                                        <ni:Plot x:Name="plotN1" Label="N1">
                                            <ni:PlotRendererGroup>
                                                <ni:LinePlotRenderer Stroke="Green"/>
                                                <ni:PointPlotRenderer Fill="Green" Size="3,3"/>
                                            </ni:PlotRendererGroup>
                                        </ni:Plot>
                                        <ni:Plot x:Name="plotNtot" Label="Ntot">
                                            <ni:PlotRendererGroup>
                                                <ni:LinePlotRenderer Stroke="#FF800600"/>
                                                <ni:PointPlotRenderer Fill="#FF800C00" Stroke="#FF8A0404" Size="3,3"/>
                                            </ni:PlotRendererGroup>
                                        </ni:Plot>
                                        <ni:Plot x:Name="plotN2" Label="Ntot">
                                            <ni:PlotRendererGroup>
                                                <ni:LinePlotRenderer Stroke="#FF061BCA"/>
                                                <ni:PointPlotRenderer Fill="#FF0762C6" Stroke="#FF0A51BD"  Size="3,3"/>
                                            </ni:PlotRendererGroup>
                                        </ni:Plot>
                                    </ni:Graph.Plots>
                                    <ni:Graph.SelectionFill>
                                        <SolidColorBrush Color="#FFF8EFC2" Opacity="0.3"/>
                                    </ni:Graph.SelectionFill>
                                </ni:Graph>
                            </Grid>

                            <ListBox x:Name="lboxNB" Grid.Column="2" Margin="0" Grid.ColumnSpan="1" FontSize="13">
                                <ListBoxItem Content="N2"/>
                                <ListBoxItem Content="NTot"/>
                                <ListBoxItem Content="B2"/>
                                <ListBoxItem Content="BTot"/>
                                <ListBoxItem Content="Bg"/>
                            </ListBox>
                            <GridSplitter x:Name="splitSignal" HorizontalAlignment="Left" Grid.Column="1" Margin="0,0,0,0" Background="#FFEFFDFA" ResizeDirection="Columns" Width="4"/>

                            <Grid Grid.Column="1" Margin="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="26"/>
                                    <RowDefinition Height="70*"/>
                                </Grid.RowDefinitions>
                                <ni:Graph x:Name="graphSignal" Grid.Row="1" Margin="0,0,0,0" FontSize="12" PlotAreaMargin="Auto,Auto,Auto,Auto" >
                                    <ni:Graph.Plots>
                                        <ni:Plot Label="Plot 1">
                                            <ni:PointPlotRenderer Fill="#FFF92727"/>
                                        </ni:Plot>
                                        <ni:Plot Label="Plot 2">
                                            <ni:PointPlotRenderer Fill="#FF5B4EFD"/>
                                        </ni:Plot>
                                    </ni:Graph.Plots>
                                    <ni:Graph.SelectionFill>
                                        <SolidColorBrush Color="#FFF8EFC2" Opacity="0.3"/>
                                    </ni:Graph.SelectionFill>
                                </ni:Graph>
                                <ni:GraphInteractionPalette Grid.Row="0" x:Name="interatctionOverview" HorizontalAlignment="Stretch" Height="23" VerticalAlignment="Top" ButtonSize="22,22" Graph="{Binding ElementName=graphSignal}" Margin="10,4,189,0" Grid.RowSpan="2"/>
                                <Label x:Name="lbInfo" Content="Info:" Margin="216,0,0,0" VerticalAlignment="Center" Height="31" FontSize="13" HorizontalAlignment="Left" Width="173"/>
                            </Grid>
                        </Grid>
                    </TabItem>

                    <TabItem x:Name="tabVelocity" Header="Velocity" Margin="0,0,0,0" HorizontalAlignment="Left" Width="97" FontSize="14" Visibility="Collapsed">
                        <Grid>

                            <ni:GraphInteractionPalette x:Name="interactionPower" HorizontalAlignment="Stretch" Height="30" Margin="28,5,-0.285,0" VerticalAlignment="Top" ButtonSize="22,22" Graph="{Binding ElementName=graphVelocity}" Grid.ColumnSpan="2"/>
                            <ni:Graph x:Name="graphVelocity" Margin="3,30,-0.285,-0.429" FontSize="12" Grid.ColumnSpan="2" PlotAreaMargin="Auto,2,Auto,Auto">
                                <ni:Graph.Plots>
                                    <ni:Plot Label="Plot 3">
                                        <ni:LinePlotRenderer/>
                                    </ni:Plot>
                                    <ni:Plot Label="Plot 4">
                                        <ni:PointPlotRenderer/>
                                    </ni:Plot>
                                </ni:Graph.Plots>
                            </ni:Graph>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="tabDistance" Header="Distance" Margin="0,0,0,0" HorizontalAlignment="Left" Width="97" FontSize="14">
                        <Grid>
                            <ni:GraphInteractionPalette x:Name="interactionHisto" HorizontalAlignment="Stretch" Height="23" Margin="28,5,0,0" VerticalAlignment="Top" ButtonSize="22,22" Graph="{Binding ElementName=graphVelocity}"/>
                            <ni:Graph x:Name="graphDistance" Margin="3,30,0,0" FontSize="12" PlotAreaMargin="Auto,2,Auto,Auto">
                                <ni:Graph.Plots>
                                    <ni:Plot Label="Plot 7">
                                        <ni:LinePlotRenderer/>
                                    </ni:Plot>
                                    <ni:Plot Label="Plot 8">
                                        <ni:PointPlotRenderer/>
                                    </ni:Plot>
                                </ni:Graph.Plots>
                            </ni:Graph>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Opts/Stats" Height="28" VerticalAlignment="Top" Margin="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="145"/>
                                <ColumnDefinition Width="607*"/>
                            </Grid.ColumnDefinitions>
                            <GroupBox Grid.Column="0" Header="Data" Margin="0,0,0,0" FontSize="12">
                                <StackPanel Margin="0,3,0,0">
                                    <GroupBox Header="Files" Height="92" Margin="0,0,-0.143,0">
                                        <StackPanel HorizontalAlignment="Left" Height="75" Margin="0" VerticalAlignment="Top" Width="124">
                                            <Button x:Name="btnOpen" Content="Open..." Margin="3,5,5,0" Click="btnOpen_Click"/>
                                            <Button x:Name="btnSaveAs" Content="Save As..." Margin="3,10,5,0" Click="btnSaveAs_Click"/>
                                        </StackPanel>
                                    </GroupBox>
                                    <Button x:Name="btnClear" Content="Clear All" Margin="12,10,7,0" Click="btnClear_Click"/>
                                </StackPanel>

                            </GroupBox>
                            <GroupBox x:Name="groupStat" Header=" Statistics " Margin="0" Grid.Column="1" FontSize="12">
                                <Grid Margin="0">
                                    <Label Content="REM:" HorizontalAlignment="Left" Margin="9,8,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.529,0.182"/>
                                    <TextBox x:Name="tbRem" HorizontalAlignment="Left" Height="23" Margin="51,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="625"/>
                                </Grid>
                            </GroupBox>

                        </Grid>
                    </TabItem>

                </TabControl>
            </Grid>
            <Grid x:Name="gridLow" Grid.Row="2" MinHeight="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="785*"/>
                    <ColumnDefinition Width="121"/>
                </Grid.ColumnDefinitions>
                <TabControl x:Name="tabLowPlots" Margin="0,2,0.714,0.857" SelectedIndex="0" FontSize="14" Grid.ColumnSpan="1">
                    <TabItem x:Name="tabFringes" Header="Fringes" Width="100" Height="28">
                        <Grid>
                            <ni:GraphInteractionPalette x:Name="interatctionFringes" HorizontalAlignment="Stretch" Height="23" Margin="28,5,547.286,0" VerticalAlignment="Top" ButtonSize="22,22" Graph="{Binding ElementName=graphSignal}"/>
                            <Label x:Name="lbInfoFrng" Content="Info:" HorizontalAlignment="Left" Margin="236,0,0,0" VerticalAlignment="Top" Height="31" Width="532" FontSize="13"/>
                            <ni:Graph x:Name="graphFringes" Margin="3,30,0.286,0" FontSize="12" PlotAreaMargin="Auto,2,Auto,Auto" Grid.ColumnSpan="2" DefaultInteraction="Pan" Interactions="Pan, Zoom">
                                <ni:Graph.Plots>
                                    <ni:Plot Label="Plot 1">
                                        <ni:LinePlotRenderer/>
                                    </ni:Plot>
                                </ni:Graph.Plots>
                                <ni:Graph.SelectionFill>
                                    <SolidColorBrush Color="#FFF8EFC2" Opacity="0.3"/>
                                </ni:Graph.SelectionFill>
                            </ni:Graph>

                        </Grid>
                    </TabItem>
                    <TabItem x:Name="tabAccelTrend" Header="Accel.Trend" Width="100" Height="28">
                        <Grid>
                            <ni:GraphInteractionPalette x:Name="interatctionGenTrend" HorizontalAlignment="Stretch" Height="23" Margin="28,5,547.286,0" VerticalAlignment="Top" ButtonSize="22,22" Graph="{Binding ElementName=graphSignal}"/>
                            <Label x:Name="lbInfoAccelTrend" Content="Info:" HorizontalAlignment="Left" Margin="236,0,0,0" VerticalAlignment="Top" Height="31" Width="640" FontSize="13"/>
                            <ni:Graph x:Name="graphAccelTrend" Margin="3,30,0.143,-0.143" Grid.ColumnSpan="2" FontSize="12" PlotAreaMargin="Auto,2,Auto,Auto" DefaultInteraction="Pan" Interactions="Pan, Zoom">
                                <ni:Graph.Plots>
                                    <ni:Plot Label="Plot 1">
                                        <ni:LinePlotRenderer Stroke="#FF7B0606" StrokeThickness="1.5"/>
                                    </ni:Plot>
                                    <ni:Plot Label="Plot 2">
                                        <ni:PlotRendererGroup>
                                            <ni:LinePlotRenderer Stroke="Green"/>
                                            <ni:PointPlotRenderer Fill="Green" Size="3,3"/>
                                        </ni:PlotRendererGroup>
                                    </ni:Plot>
                                </ni:Graph.Plots>
                                <ni:Graph.SelectionFill>
                                    <SolidColorBrush Color="#FFF8EFC2" Opacity="0.3"/>
                                </ni:Graph.SelectionFill>
                            </ni:Graph>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Opts/Stats" Height="28" VerticalAlignment="Top" Margin="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="145"/>
                                <ColumnDefinition Width="145"/>
                                <ColumnDefinition Width="607*"/>
                            </Grid.ColumnDefinitions>
                            <GroupBox Grid.Column="1" Header="Data" Margin="0,0,0,0" FontSize="12">
                                <StackPanel Margin="0,3,0,0">
                                    <GroupBox Header="Files" Height="92" Margin="0,0,-0.143,0">
                                        <StackPanel HorizontalAlignment="Left" Height="75" Margin="0" VerticalAlignment="Top" Width="124">
                                            <Button x:Name="btnOpenFringes" Content="Open..." Margin="3,5,5,0" />
                                            <Button x:Name="btnSaveAsFringes" Content="Save As..." Margin="3,10,5,0" />
                                        </StackPanel>
                                    </GroupBox>
                                    <Button x:Name="btnClearFringes" Content="Clear All" Margin="12,10,7,0" />
                                </StackPanel>

                            </GroupBox>
                            <GroupBox x:Name="groupStatFringes" Header=" Statistics " Margin="0" Grid.Column="2" FontSize="12">
                                <Grid Margin="0">
                                    <Label Content="REM:" HorizontalAlignment="Left" Margin="9,8,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.529,0.182"/>
                                    <TextBox x:Name="tbRemFringes" HorizontalAlignment="Left" Height="23" Margin="51,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="394"/>
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Jumbo Scan params" Margin="0,0,5.143,0">
                                <Grid Margin="0,0,-0.286,-0.143">
                                    <Label Content="From" HorizontalAlignment="Left" Margin="10,11,0,0" VerticalAlignment="Top"/>
                                    <ni:NumericTextBoxDouble x:Name="numFrom" HorizontalAlignment="Left" Height="23" Margin="57,13,0,0" VerticalAlignment="Top" Width="67"/>
                                    <Label Content="To" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
                                    <ni:NumericTextBoxDouble x:Name="numTo" HorizontalAlignment="Left" Height="23" Margin="57,44,0,0" VerticalAlignment="Top" Width="67" Value="12.56"/>
                                    <Label Content="By" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.601,3.165"/>
                                    <ni:NumericTextBoxDouble x:Name="numBy" HorizontalAlignment="Left" Height="23" Margin="57,74,0,0" VerticalAlignment="Top" Width="67" Value="0.1"/>
                                </Grid>
                            </GroupBox>

                        </Grid>
                    </TabItem>


                </TabControl>
                <GroupBox Header="PID feedback" Margin="0,0,0,0" FontSize="12" Grid.Column="1">
                    <Grid Margin="0,0,0.429,0">
                        <Label Content="kP" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                        <ni:NumericTextBoxDouble x:Name="ndKP" HorizontalAlignment="Left" Height="23" Margin="41,13,0,0" VerticalAlignment="Top" Width="58" RenderTransformOrigin="0.501,-0.217" Value="1" Interval="0.1" Range="0, 100, System.Double" KeyDown="ndKP_KeyDown"/>
                        <Label Content="kI" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top"/>
                        <ni:NumericTextBoxDouble x:Name="ndKI" HorizontalAlignment="Left" Height="23" Margin="41,41,0,0" VerticalAlignment="Top" Width="58" RenderTransformOrigin="0.501,-0.217" Interval="0.1" Range="0, 100, System.Double" KeyDown="ndKP_KeyDown"/>
                        <Label Content="kD" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top"/>
                        <ni:NumericTextBoxDouble x:Name="ndKD" HorizontalAlignment="Left" Height="23" Margin="41,68,0,0" VerticalAlignment="Top" Width="58" RenderTransformOrigin="0.501,-0.217" Interval="0.1" Range="0, 100, System.Double" KeyDown="ndKP_KeyDown"/>
                        <CheckBox x:Name="chkFollowPID" Content="Follow" HorizontalAlignment="Left" Margin="10,106,0,0" VerticalAlignment="Top" IsChecked="True" RenderTransformOrigin="0.5,0.5"/>
                        <GroupBox Header="Strobes" HorizontalAlignment="Left" Margin="0,126,0,0" VerticalAlignment="Top" Height="67" Width="103">
                            <StackPanel Margin="0,0,0.429,-12.714">
                                <RadioButton x:Name="rbSingle" Content="Single(down)" Margin="0,5,0,0" IsChecked="True" />
                                <RadioButton x:Name="rbDouble" Content="Double" Margin="0,6,0,0" />
                            </StackPanel>
                        </GroupBox>
                    </Grid>
                </GroupBox>

            </Grid>

        </Grid>

    </Grid>
</Window>
